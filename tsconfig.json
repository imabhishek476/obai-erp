{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "libdefs/globals"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "exclude": [
    "**/__tests__/**",
    "**/dist/**",
    "**/npm/**",
    "**/node_modules/**",
    "./packages/playwright-core/**"
  ],
  "typedocOptions": {
    "logLevel": "Verbose"
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/pages/presentation/index.jsx"  ]
}
